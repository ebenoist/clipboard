rules:
  indent:
    - 2
    - 2
  quotes:
    - 2
    - single
  linebreak-style:
    - 2
    - unix
  semi:
    - 2
    - always
  comma-dangle:
    - 0
env:
  es6: true
  browser: true
  commonjs: true
plugins:
  - react
extends:
  - 'eslint:recommended'
parserOptions:
  ecmaFeatures:
    modules: true
    jsx: true
